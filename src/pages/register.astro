---
export const prerender = false;
import { actions } from "astro:actions";
import Layout from "src/layouts/Layout.astro"
const res = Astro.getActionResult(actions.user.registerUser);
if (res?.data) {
    return Astro.redirect('/');
}
---

<Layout>
    <div class="w-full xl:h-[91vh] 2xl:h-[92.9vh]  h-screen grid place-items-center auth-bg overflow-hidden" >
        <div class="bg-base-200 w-fit min-h-80 rounded-lg p-8 flex flex-col items-center justify-center shadow">
            <h1 class="text-xl font-bold">Register</h1>
            <form action={actions.user.registerUser} method="POST">
                <fieldset class="fieldset mb-2">
                    <legend class="fieldset-legend ps-1">Email</legend>
                    <input type="email" name="email" class="input input-md w-80" placeholder="email@gmail.com" />
                </fieldset>
                <fieldset class="fieldset mb-2">
                    <legend class="fieldset-legend ps-1">Full Name</legend>
                    <input type="text" name="fullName" class="input input-md w-80" placeholder="Michael Scott" />
                </fieldset>
                <fieldset class="fieldset mb-2">
                    <legend class="fieldset-legend ps-1">Password</legend>
                    <input type="password" name="password" class="input input-md w-80" placeholder="password" />
                </fieldset>
                <fieldset class="fieldset mb-2">
                    <legend class="fieldset-legend ps-1">Confirm Password</legend>
                    <input type="password" name="confirmPassword" class="input input-md w-80" placeholder="confirm password" />
                </fieldset>
                <button type="submit" class="btn btn-secondary w-full mt-6 py-6">Register</button>
                <div class="mt-4 text-center text-sm">Have an account? <a href="login" class="hover:link text-blue-500">Login</a></div>
            </form>
        </div>
    </div>
</Layout>